<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primary"
    app:cardCornerRadius="16dp"
    android:layout_margin="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_cancel_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/name_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/product_sans_bold"
            android:layout_margin="8dp"
            app:drawableStartCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/number_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number 26"
            android:textColor="@color/white"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="17sp"
            android:layout_marginStart="8dp"
            android:drawablePadding="4dp"
            android:layout_below="@id/name_ticket"
            app:drawableStartCompat="@drawable/ic_seat" />


        <TextView
            android:id="@+id/title_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_already_have_account_login"
            android:layout_below="@id/number_seat"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="8dp"
            android:fontFamily="@font/product_sans_regular"
            app:drawableStartCompat="@drawable/ic_movies" />

        <TextView
            android:id="@+id/cost_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.0"
            android:layout_below="@id/title_ticket"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/product_sans_regular"
            app:drawableStartCompat="@drawable/ic_ticket" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>